<h2>Posts</h2>

{{#if posts}}
  <ul>
      {{#each posts}}
      <li>
        <img src="{{this.imageUrl}}" alt="{{this.title}}">
        {{this.title}} by {{this.author.username}}
        <a href="/posts/{{this._id}}"> Show details</a>

      </li>
      {{/each}}
  </ul>
{{else}}
  <p>No posts yet!</p>
{{/if}}